{
  "name": "babel-plugin-node-cjs-interop",
  "description": "A babel plugin to fix the default import interoperability issue in Node.js",
  "keywords": [
    "babel",
    "babel-plugin",
    "commonjs",
    "node",
    "esm",
    "mjs",
    "cjs",
    "default import"
  ],
  "homepage": "https://github.com/qnighy/node-cjs-interop#readme",
  "bugs": {
    "url": "https://github.com/qnighy/node-cjs-interop/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/qnighy/node-cjs-interop.git",
    "directory": "packages/babel-plugin-node-cjs-interop"
  },
  "license": "MIT",
  "author": "Masaki Hara <ackie.h.gmai@gmail.com>",
  "version": "0.1.2",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "import": "./dist/index.mjs",
    "default": "./dist/index.js"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "$npm_execpath build:tsc && $npm_execpath build:babel:esm && $npm_execpath build:babel:cjs",
    "build:babel:cjs": "BUILD_TARGET=cjs babel -d dist src -x '.ts' --ignore 'src/**/*.test.ts' --ignore '**/*.d.ts'",
    "build:babel:esm": "BUILD_TARGET=esm babel -d dist src -x '.ts' --ignore 'src/**/*.test.ts' --ignore '**/*.d.ts' --out-file-extension .mjs",
    "build:tsc": "tsc --build",
    "fmt": "prettier -w .",
    "fmt:check": "prettier -c .",
    "jest": "BUILD_TARGET=cjs jest",
    "lint": "eslint 'src/**/*'",
    "prepack": "$npm_execpath build",
    "test": "yarn build:babel:cjs && yarn jest"
  },
  "dependencies": {
    "@babel/helper-plugin-utils": "^7.14.5",
    "@babel/helper-validator-option": "^7.14.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/eslint-plugin-development": "^7.16.5",
    "@babel/helper-plugin-test-runner": "^7.16.5",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@babel/types": "^7.16.0",
    "@jest/globals": "^27.4.4",
    "@types/babel__core": "^7.1.19",
    "@types/babel__helper-plugin-utils": "^7.10.0",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "babel-jest": "^27.4.4",
    "babel-plugin-replace-import-extension": "^1.1.3",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.7.0",
    "jest": "^27.4.4",
    "jest-resolve": "^27.4.5",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.3"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".mts"
    ],
    "resolver": "jest-ts-webcompat-resolver"
  }
}
