{
  "private": true,
  "packageManager": "yarn@4.4.0",
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "build": "yarn workspaces foreach -Apt run build",
    "changeset": "changeset",
    "fmt": "yarn workspaces foreach -Ap run fmt",
    "fmt:check": "yarn workspaces foreach -Ap run fmt:check",
    "lint": "yarn build && yarn workspaces foreach -Ap run lint",
    "test": "yarn build && yarn workspaces foreach -Ap run test"
  },
  "devDependencies": {
    "@babel/eslint-plugin-development": "^7.25.1",
    "@changesets/cli": "^2.27.7",
    "@eslint/js": "^9.8.0",
    "@types/eslint": "^9.6.0",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint__js": "^8.42.3",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.6.0",
    "globals": "^15.9.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.0"
  }
}
